<div style="display:block;overflow:hidden;vertical-align:top;">
  <h2><span style="horizontal-align:center"><%= link_to publisher.title, publisher %></span></h2>
  <p>
    <div style="display:inline-block;float:left;margin-left:1em;margin-right:1em;margin-bottom:1em;">
      <%= link_to image_tag("http://api.thumbalizr.com/?api_key=ebddac5af4f9e9d1ff38cb98110250d2&url=#{publisher.url}&width=400", :height => 200), publisher.url %>
    </div>
    <%= publisher.body %>
  </p>

  <% num = publisher.webpages.size %>
  <% if num > 0 %>
    <% publisher.webpages.each do |webpage| %>
      <%= link_to image_tag("http://api.thumbalizr.com/?api_key=ebddac5af4f9e9d1ff38cb98110250d2&url=#{webpage.url}&width=400", :height => 100), webpage %>
    <% end %>
  <% end %>
</div>
